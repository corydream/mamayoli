@import "../../../style/button";

.detail-container {
    width           : 100%;
    background-color: #fff;
    position        : relative;
    height          : calc(100vh - 212rpx);
    padding-bottom  : 50rpx;
    overflow        : auto;

}

.detail-header {
    width : 100%;
    height: 400rpx;
}

.d-item {
    padding: 32rpx 32rpx 52rpx;
}

.d-adv {
    color    : #f66400;
    font-size: 28rpx;
}

.d-tit {
    color         : #333;
    font-size     : 40rpx;
    padding-bottom: 10rpx 0 20rpx;
}

.d-level {
    color    : #999;
    font-size: 24rpx;
    padding  : 10rpx 0;
}

.d-time {
    display        : flex;
    justify-content: space-between;
    align-items    : center;
    color          : #999;
    font-size      : 24rpx;
}

.d-share {
    color    : #333;
    margin   : 0;
    padding  : 0;
    font-size: 24rpx;
}

.d-image {
    height: 306rpx;
    width : 100%;
    margin: 0 auto;
}

.d-flow {
    display       : flex;
    flex-direction: column;
    position      : relative;
}

.d-type {
    display       : flex;
    flex-direction: column;
    color         : #fff;
    position      : absolute;
    top           : 60rpx;
    right         : 72rpx;
    align-items   : flex-end;
}

.d-type-name {
    font-size    : 48rpx;
    margin-bottom: 32rpx;
}

.d-type-btn {
    width        : 200rpx;
    height       : 72rpx;
    border-radius: 40rpx;
    border       : 3rpx solid rgba(255, 255, 255, 1);
    text-align   : center;
    line-height  : 72rpx;
    font-size    : 32rpx;
    color        : #fff;
}

.van-icons {
    vertical-align: -4rpx;
}

.d-ctx {
    width      : 686rpx;
    font-size  : 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color      : rgba(102, 102, 102, 1);
    line-height: 48rpx;
    padding    : 0 32rpx 100rpx;

}

.bottom {
    width           : 100%;
    margin          : 0 auto;
    height          : 212rpx;
    border-top      : 1rpx solid #ccc;
    box-shadow      : 0px 1px 0px 0px rgba(204, 204, 204, 1);
    position        : fixed;
    bottom          : 0;
    left            : 0;
    font-size       : 40rpx;
    background-color: #fff;
}

/* 未中奖样式 */
.no-award {
    padding: 64rpx 32rpx;
    color  : #333;
}

.no-award .title {
    font-size: 56rpx;
}

.no-award .sec-title {
    font-size: 28rpx;
    padding  : 40rpx 0 32rpx 0;
}