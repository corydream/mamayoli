@import "../../../style/button";

.note-outer {
    font-size  : 30rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    background : #fff;
    height: 100vh;
    overflow: hidden;
    position: relative;
}
.note-ctx{
    margin-top: 311rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.note-ctx .ctx-img{
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 48rpx;
}
.note-ctx .ctx-title{
    color: #333;
    font-size: 56rpx;
    font-weight: 600;
    margin-bottom: 16rpx;
}
.note-ctx .ctx-text{
    color: #666;
    font-size: 28rpx;
    font-weight: 400;
}
.bottom {
    width           : 100%;
    margin          : 0 auto;
    height          : 212rpx;
    position        : absolute;
    bottom          : 0;
    left            : 0;
    font-size       : 40rpx;
    background-color: #fff;
}