.label1 {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
 
.ui-radio {
  border: 1px solid rgba(153, 153, 153, 1);
  width: 100%;
  height: 64rpx;
  border-radius: 6px;
  text-align: center;
  white-space: nowrap;
  font-size: 14px;
  font-weight: 400;
}

.ui-radio.left {
  border-radius: 6px 0px 0px 6px;
  border-right-style: none;
}

.ui-radio.left1 {
  border-radius: 6px 0px 0px 6px;
}

.ui-radio.center {
  border-radius: 0px;
  border-right-style: none;
  border-left-style: none;
}

.ui-radio.center.active {
  border-right-style: solid;
  border-left-style: solid;
}

.ui-radio.right {
  border-left-style: none;
  padding-left: 1px;
  border-radius: 0px 6px 6px 0px;
}

.ui-radio.right1 {
  padding-left: 1px;
  border-radius: 0px 6px 6px 0px;
}

.ui-radio.active {
  background-color: rgba(255, 48, 0, 0.08);
  color: rgba(246, 100, 0, 1);
  border: 1px solid rgba(246, 100, 0, 1);
  text-align: center;
  white-space: nowrap;
}

.ui-radio.active.time {
  width: 250rpx;
}

.ui-radio.provideType {
  width: 228rpx;
}

.ui-radio.attractingType {
  width: 152rpx;
}

.ui-radio.active .text {
  color: rgba(246, 100, 0, 1);
  line-height: 70rpx;
}

.text {
  color: rgba(153, 153, 153, 1);
  font-weight: 400;
  line-height: 70rpx;
  font-size: 28rpx;
}

.ui-radio.active .text {
  color: rgba(246, 100, 0, 1);
  line-height: 70rpx;
}


