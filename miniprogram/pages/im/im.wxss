page {
  background: #f4f5f6;
  display: flex;
  height: 100vh;
  font-family: PingFangSC-Medium, PingFang SC;
  font-size: 28rpx;
}

.siwper {
  display: flex;
  height: 100%;
  width: 100%;
  justify-content: center;
}
/* .swipper-item{
  pointer-events: none
} */
.swipper-scroll {
  background: white;
  height: 100%;
}

.delete {
  color: rgba(255, 48, 0, 1);
  margin-top: 10rpx;
}

.ui-radio radio, .ui-radio checkbox {
  display: none;
}

.ui-radio {
  border: 1px solid rgba(153, 153, 153, 1);
  width: 150rpx;
  height: 64rpx;
  border-radius: 6px;
  text-align: center;
  white-space: nowrap;
  font-size: 14px;
  font-weight: 400;
}

.ui-radio.left {
  border-radius: 6px 0px 0px 6px;
  border-right-style: none;
}

.ui-radio.left1 {
  border-radius: 6px 0px 0px 6px;
}

.ui-radio.center {
  border-radius: 0px;
  border-right-style: none;
  border-left-style: none;
}

.ui-radio.center.active {
  border-right-style: solid;
  border-left-style: solid;
}

.ui-radio.right {
  border-left-style: none;
  padding-left: 1px;
  border-radius: 0px 6px 6px 0px;
}

.ui-radio.right1 {
  padding-left: 1px;
  border-radius: 0px 6px 6px 0px;
}

.ui-radio.active {
  background-color: rgba(255, 48, 0, 0.08);
  color: rgba(246, 100, 0, 1);
  border: 1px solid rgba(246, 100, 0, 1);
  text-align: center;
  white-space: nowrap;
}

.ui-radio.active.time {
  width: 250rpx;
}

.ui-radio.provideType {
  width: 228rpx;
}

.ui-radio.attractingType {
  width: 152rpx;
}

.text {
  color: rgba(153, 153, 153, 1);
  font-weight: 400;
  line-height: 70rpx;
  font-size: 28rpx;
}

.ui-radio.active .text {
  color: rgba(246, 100, 0, 1);
  line-height: 70rpx;
}

.label1 {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.title {
  margin-top: 32rpx;
  font-size: 40rpx;
  line-height: 48rpx;
  margin-left: 32rpx;
  color: rgba(51, 51, 51, 1);
  font-weight: 500;
  margin-bottom: 32rpx;
}

.bottom {
  height: 212rpx;
  width: 100%;
  display: flex;
  background: #ffffffff;
  opacity: 1;
  position: fixed;
  bottom: 0px;
  z-index: 10000;
  border-top: 1px  solid #EEEEEE;
  font-size: 32rpx;
}

.nextPage {
  width: 240rpx;
  height: 96rpx;
  background: rgba(246, 100, 0, 1);
  border-radius: 45rpx;
  font-size: 32rpx;
  position: absolute;
  line-height: 96rpx;
  right: 32rpx;
  top: 28rpx;
  color: rgba(255, 255, 255, 1);
}

.prePage {
  width: 192rpx;
  color: rgba(102, 102, 102, 1);
  height: 96rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  position: absolute;
  line-height: 96rpx;
  left: 32rpx;
  top: 28rpx;
  
}

.row {
  width: 100%;
  height: 132rpx;
  display: flex;
  justify-content: left;
  align-items: center;
}
.smallrow{
  width: 100%;
  height: 36rpx;
  margin-top: 48rpx;
  margin-bottom: 48rpx;
  display: flex;
  justify-content: left;
  align-items: center;
}
.row.big {
  height: 160rpx;
}

.row.small {
  height: 32rpx;
}

.red {
  color: #f66400;
}

.lable {
  width: 232rpx;
  height: 100%;
  margin-left: 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(60, 60, 60, 1);
  line-height: 132rpx;
}

.content {
  width: calc(100% - 160rpx-48rpx);
  font-weight: 400;
}

/*中间的过度的横线*/

.line {
  width: calc(100% - 64rpx);
  height: 1px;
  margin-left: 32rpx;
  border-top: solid #ddd 1px;
}

.line.long {
  width: 100%;
  margin-left: 0rpx;
}

.addpic {
  height: 300rpx;
  width: calc(100% - 64rpx);
  display: block;
  margin-top: 24rpx;
}

.addPirce {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.addPriceImg {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
}

.uploadPicView {
  width: calc(100% - 64rpx);
  height: 366rpx;
  margin-left: 32rpx;
  position: relative;

  display: flex;
  background: #F4F4F4;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* border: 1px solid #999999; */
  border-radius: 8rpx;

}
.addPirceView {
  margin-top: 48rpx;
}

.uploadImg {
  border-radius: 8rpx;
  width: 100%;
  height: 100%;
}

.uploadPic {
  width: 80rpx;
  height: 80rpx;
}

.deletePrice {
  position: absolute;
  float: left;
  width: 40rpx;
  height: 40rpx;
  left: 24rpx;
  top: 24rpx;
  z-index: 1;
}

.upload.text {
  width: 192rpx;
  height: 40rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  margin-top: 48rpx;
  line-height: 40rpx;
}

.detail {
  height: 360rpx;
  width: calc(100% - 96rpx);
  text-align: left;
  border: solid #999999 1px;
  padding: 16rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  font-weight: 400;
  border-radius: 8rpx;
}

.detailPicsView{
  width: calc(100% - 64rpx);
  position: relative;
  margin-left: 32rpx;
  margin-right: 32rpx;
}
.detailPics{
  width: 100%;
}
.empty {
  width: 100%;
  height: 300rpx;
}
.empty.small{
  height: 48rpx;
}