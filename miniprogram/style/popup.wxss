/* 弹窗 */
.user-center-no-login {
  position: absolute;
  top     : 0;
  left    : 0;
  width   : 100vw;
  height  : 100vh;
  z-index : 10;
}

.popup-layout {
  width           : 640rpx;
  height          : 744rpx;
  position        : relative;
  background-color: transparent !important;
  overflow        : hidden;
  top             : 548rpx !important;
  font-size       : 32rpx;
}

.popup-image {
  width : 640rpx;
  height: 744rpx;
}

.login-btn {
  width        : 450rpx;
  height       : 88rpx;
  background   : rgba(246, 100, 0, 1);
  border-radius: 100rpx;
  color        : #fff;
  line-height  : 88rpx;
  position     : absolute;
  bottom       : 200rpx;
  color        : #fff;
  left         : 0;
  right        : 0;
}

.cancel-btn {
  width        : 446rpx;
  height       : 86rpx;
  border-radius: 100rpx;
  line-height  : 86rpx;
  border       : 1rpx solid rgba(204, 204, 204, 1);
  color        : #999;
  position     : absolute;
  bottom       : 80rpx;
  left         : 0;
  right        : 0;
  background   : #fff;
}